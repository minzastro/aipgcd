<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<link rel=stylesheet href='html/style.css' type='text/css'>
<head>
    <title>{{source_id}} from {{source}} ({{uid}})</title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <meta name="generator" content="Geany 1.22" />
    <script type="text/javascript" charset="utf8" src="/static/jquery.min.js"></script>
    <script type="text/javascript" charset="utf8" src="/static/DataTables/media/js/jquery.dataTables.min.js"></script>
    <script language="javascript">
        function show_hide_column(tableid, columnlist) {
           //var tbl = $('table#'+tableid);
           var values = columnlist.split(',');
           var inp = document.querySelector('input#'+tableid);
           for (var i = 0; i < values.length; i++){
               var col = $('table#'+tableid+' > thead > tr > th#'+values[i]);
               if (col) {
                 col.css('display', inp.checked?"table-cell":"none");
               }
           }
        }
        function winOnLoad(){
            $('table#threexmm_detections').DataTable({
                ordering: true,
                //"scrollY":        window.innerHeight - 200,
                //"scrollCollapse": true,
                paging: false
            });
        };
        window.onload = winOnLoad;
    </script>
</head>

<body>
<div style='float:left'>
    <a href='index'>Main menu</a>
<h1>{{source_id}} from {{source}} ({{uid}})</h1>
<table class='hovertable' width=500>
    <caption>Main parameters</caption>
    <tr>
        <th>Parameter</th>
        <th>Description</th>
        <th>Value</th>
        <th>Error (lower)</th>
        <th>Error (upper)</th>
        <th>Source</th>
    </tr>
    {%for par in params%}
    <tr>
        <td>{{par.name}}</td>
        <td>{{par.desc}}</td>
        <td>{{par.value}}</td>
        <td>{{par.err_low}}</td>
        <td>{{par.err_high}}</td>
        <td>{{par.source}}</td>
    </tr>
    {%endfor%}
</table>

{%for table in tables%}
<hr>
<h1>{{table.title}}</h1>
<input type="checkbox" id="{{table.id}}" onchange="show_hide_column('{{table.id}}', '{{table.briefcols}}')">Show all<br>
{{table.html}}
{%endfor%}
</div>
</body>

</html>
